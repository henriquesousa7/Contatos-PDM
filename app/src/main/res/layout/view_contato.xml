<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nomeContatoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/emailContatoTv"
        android:layout_width="wrap_content"
        android:text="E=mail"
        app:layout_constraintTop_toBottomOf="@id/nomeContatoTv"
        app:layout_constraintEnd_toStartOf="@id/celularTv"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/celularTv"
        android:layout_width="wrap_content"
        android:text="Celular"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/nomeContatoTv"
        app:layout_constraintStart_toEndOf="@id/emailContatoTv"
        android:layout_height="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>